@model MyBookStore.ViewModels.Forum.EditForumViewModel

<h2>Edit Forum</h2>

<form asp-controller="Forum" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Title">Title:</label>
        <input type="text" asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
