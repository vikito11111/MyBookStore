@model MyBookStore.ViewModels.Admin.AddPublisherViewModel

<style>
    .label-decor {
        font-size: 18px;
        font-weight: bold;
        color: #333333;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Add Publisher</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddPublisher" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label for="Name" class="label-decor">Name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Established" class="label-decor">Established:</label>
                            <input asp-for="Established" type="date" class="form-control" />
                            <span asp-validation-for="Established" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Bio" class="label-decor">Bio:</label>
                            <textarea asp-for="Bio" class="form-control"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Image" class="label-decor">Image:</label>
                            <input asp-for="Image" type="file" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary mt-3 mb-2" style="background-color: blue;">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

