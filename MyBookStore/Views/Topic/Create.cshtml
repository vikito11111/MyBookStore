@model MyBookStore.ViewModels.Topic.CreateTopicViewModel

<h1>Create New Topic</h1>

<form asp-action="Create" asp-controller="Topic" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" id="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <input asp-for="ForumId" type="hidden" />
    <input asp-for="Created" type="hidden" />
    <input asp-for="CreatorId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

    <button type="submit" class="btn btn-primary">Create Topic</button>
</form>

<a asp-action="Index" asp-controller="Forum" class="btn btn-secondary">Cancel</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
